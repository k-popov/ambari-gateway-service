<configuration>
  <property>
    <name>rpm_gs_location</name>
    <value>gs://mlsandbox-gs-bucket/gateway-1.0-1.noarch.rpm</value>
    <require-input>true</require-input>
    <description>Google storage location of gateway artifact</description>
  </property>
  <!-- gateway-env.sh -->
  <property>
    <name>content</name>
    <description>This is the jinja template for gateway-env.sh file</description>
    <value>
#!/bin/bash

# Set GATEWAY specific environment variables here.

# The java implementation to use.
export JAVA_HOME={{java64_home}}
export PATH=$PATH:$JAVA_HOME/bin
    </value>
  </property>
</configuration>
